<Window x:Class="avans_Kwisspel.View.QuestionOverview"
        xmlns:src="clr-namespace:avans_Kwisspel.View"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding Questions, Source={StaticResource Locator}}"
        Title="QuestionOverview" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1.0*"></RowDefinition>
            <RowDefinition Height="1.0*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="10,0,0,0"/>
                </Style>
            </StackPanel.Resources>
            <Label Content="Nieuwe Vraag:" VerticalAlignment="Center"/>
            <TextBox Height="23" TextWrapping="Wrap" Text="" Width="300"/>
            <Button Content="Toevoegen" Width="100" VerticalAlignment="Center" Height="25"></Button>
        </StackPanel>
        
        <DataGrid Grid.Row="1">
            
        </DataGrid>
    </Grid>
</Window>
