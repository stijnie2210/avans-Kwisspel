<Window x:Class="avans_Kwisspel.MainWindow"
        xmlns:src="clr-namespace:avans_Kwisspel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:avans_Kwisspel.ViewModel"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="Kwisspel" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1.0*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.0*"></ColumnDefinition>
            <ColumnDefinition Width="1.0*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Content="Vragen beheer" Grid.Row="1" Grid.Column="0" Width="100" Height="50" VerticalAlignment="Center" Command="{Binding OpenQuestionOverview}"/>
        <Button Content="Kwis spelen" Grid.Row="1" Grid.Column="1" Width="100" Height="50" VerticalAlignment="Center"/>
        <Label Content="Kwisspel" Grid.Row="0" VerticalAlignment="Center" FontSize="25" FontWeight="ExtraBold" Margin="197,10,196,22" Grid.ColumnSpan="2"/>


    </Grid>
</Window>
