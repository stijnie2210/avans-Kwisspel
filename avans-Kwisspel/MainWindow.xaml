<Window x:Class="avans_Kwisspel.MainWindow"
        xmlns:src="clr-namespace:avans_Kwisspel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:avans_Kwisspel.ViewModel"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="Kwisspel" Height="350" Width="525">
    
    <Window.Background>
        <ImageBrush ImageSource="Img/background-dark.jpg"/>
    </Window.Background>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Kwisspel" Foreground="CadetBlue" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="25" FontWeight="ExtraBold" Grid.ColumnSpan="2"/>
        <Button Content="Vragen beheer" Grid.Row="2" Grid.Column="0" Width="100" Height="50" VerticalAlignment="Center" Command="{Binding OpenQuestionOverview}"/>
        <Button Content="Kwis spelen" Grid.Row="1" Width="100" Height="50" HorizontalAlignment="Center" Command="{Binding OpenPlayQuiz}"/>
        <Button Content="Kwis beheer" Grid.Row="3" Width="100" Height="50" HorizontalAlignment="Center" Command="{Binding OpenQuizOverview}"/>

    </Grid>
</Window>
